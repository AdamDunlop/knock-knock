require 'twitter'
<h1>Comedian</h1>
<h2><%= "#{@comedian.first_name} #{@comedian.last_name} #{@comedian.get_tweets} |  ".capitalize %> <a class="twitter-share-button"
  href="https://twitter.com/intent/tweet">
Tweet</a></h2>
<p><img src="<%= "#{@comedian.picture_url}" %>"/></p>
<a class="twitter-timeline" href="https://twitter.com/<%="#{@comedian.first_name}".capitalize%><%="#{@comedian.last_name}".capitalize%>" data-widget-id=<%= "#{@comedian.widget_id}"%>>Tweets by @<%="#{@comedian.first_name}".capitalize%><%="#{@comedian.last_name}".capitalize%></a>
